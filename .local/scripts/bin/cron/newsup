#!/bin/dash

# Set as a cron job to check for new RSS entries for newsboat.
# If newsboat is open, sends it an "R" key to refresh.

ping -q -c 1 example.org > /dev/null || exit

/usr/bin/notify-send "ğŸ“° Updating RSS feeds..."

#pgrep -f newsboat$ \
  #&& /usr/bin/xdotool key --window "$(/usr/bin/xdotool search --name newsboat)" R \
  #&& exit

pgrep newsboat > /dev/null || /usr/bin/newsboat -x reload
/usr/bin/notify-send "ğŸ“° RSS feed update complete."
