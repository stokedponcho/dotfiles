;==========================================================
;   To learn more about how to configure Polybar
;   go to https://github.com/polybar/polybar
;
;   The README contains a lot of information
;==========================================================

[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true
pseudo-transparency = false

[colors]
transparent = #00000000
background = ${xrdb:background:#222}
background-alt = ${xrdb:color1:#444}
foreground = ${xrdb:foreground:#bfbfbf}
foreground-alt = ${xrdb:color8:#bfbfbf}
primary = ${xrdb:color1:#ffb52a}
secondary = ${xrdb:color2:#e60053}
alert = #bd2c39

[bar/primary]
inherit = bar/base
padding-right = 1
tray-position = right

[bar/secondary]
inherit = bar/base

[bar/base]
monitor = ${env:MONITOR}
width = 100%
height = 30
wm-restack = bspwm
override-redirect = true
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}
line-size = 0
line-color = ${colors.background-alt:#666}
dim-value = ${xrdb:alpha:0.8}

border-size = 0
border-color = ${colors.background-alt}

padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1

font-0 = Fira Code:pixelsize=11:style=Bold;2
font-1 = Font Awesome 5 Free Solid:size=11:;antialias=true;2

modules-left = bspwm xwindow
modules-center =
modules-right = packages temperature memory cpu pulseaudio microphone xbacklight battery datetime powermenu

tray-foreground = ${colors.foreground}
tray-background = ${colors.background-alt}
tray-position = none

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
format = <label-state> <label-mode>
label-monocle = " "
label-tiled = " "
label-fullscreen = " "
label-floating = " "
label-pseudotiled = " "
label-locked = " "
label-sticky = " "
label-private =  " "
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1
label-occupied = %index%
label-occupied-padding = 1
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/packages]
type = custom/ipc
hook-0 = packages
initial = 1

[module/datetime]
type = custom/script
interval = 60
exec = datetime
click-left = sh -c 'protonmail-bridge; org.mozilla.Thunderbird;'

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-volume = "%percentage%%"
label-volume-foreground = ${root.foreground}
label-muted = " %percentage%%"
label-muted-foreground = #999
ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
ramp-volume-3 = ""
click-right = exec pavucontrol &

[module/microphone]
type = custom/script
tail = true
exec = microphone --color-muted="#999" listen
click-left = microphone toggle
click-right = exec pavucontrol &
scroll-up = microphone up
scroll-down = microphone down


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%

[module/xbacklight]
type = internal/xbacklight
format = <ramp> <label>
label = %percentage%%
ramp-0 = ""

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99
format-charging = " <label-charging>"
format-discharging = <ramp-capacity> <label-discharging>
format-full-prefix = " "
ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""

[module/temperature]
type = internal/temperature
thermal-zone = 5
;hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon6/temp1_input
interval = 2
base-temperature = 40
warn-temperature = 75
format = <label>
format-prefix = " "
format-warn = <label-warn>
label = %temperature-c%
label-warn = " %temperature-c%"
label-warn-foreground = ${colors.alert}

[module/powermenu]
type = custom/text
interval = 0
content = ""
click-left = powermenu
content-padding = 2
content-background = ${colors.background-alt}

; vim:ft=dosini
